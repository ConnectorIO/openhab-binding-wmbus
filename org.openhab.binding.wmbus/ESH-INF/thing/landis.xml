<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="wmbus" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <thing-type id="landis_heat_meter">
        <supported-bridge-type-refs>
            <bridge-type-ref id="wmbusbridge" />
            <bridge-type-ref id="wmbusvirtualbridge" />
        </supported-bridge-type-refs>

        <label>Landis Heat Meter</label>
        <description>Heat meter.</description>

        <channels>
            <channel id="energy" typeId="energy" />
            <channel id="volume" typeId="volume" />
            <channel id="power" typeId="power" />
            <channel id="flow_volume" typeId="flow_volume" />
            <channel id="flow_temperature" typeId="flow_temperature" />
            <channel id="return_temperature" typeId="return_temperature" />
            <channel id="temperature_difference" typeId="temperature_difference" />
            <channel id="max_power" typeId="max_power" />
            <channel id="max_flow_volume" typeId="max_flow_volume" />
            <channel id="max_flow_temperature" typeId="max_flow_temperature" />
            <channel id="max_return_temperature" typeId="max_return_temperature" />
            <channel id="on_time_error" typeId="on_time_error" />
            <channel id="error_flags" typeId="error_flags" />
        </channels>

        <config-description-ref uri="wmbus:meter"/>
    </thing-type>

</thing:thing-descriptions>
